{% set postFormatClass = postFormat ? '-'~postFormat : '' %}
{% set postFormatRead = postFormat? fn('get_post_format', post) : '' %}

{% block content %}
  <article id="post-{{ post.id }}" class="tile {{ post.class }} tile_type-{{ post.get_field('tile_type') }}">

    <div class="tile__feature-image">
      <div class="feature-image">

        <a class="tile__link--image" href="{{ post.link }}">
          <img class="feature-image__img"  src="{{post.get_field('image_room_set').sizes.feature500x600 }}" alt="{{ post.title }}" >
        </a>
      </div>
    </div>

    <header class="entry-header tile__header ">
      <h2 class="entry-title tile__title">
        <a class="tile__link--title" href="{{ post.link }}">{{ post.title }}</a>
      </h2>
    </header>

    <footer class="tile__footer">
      <a class="tile__link--more" href="{{ post.link }}">More Info</a> <span class="tile__icon">&raquo;</span>
    </footer>

  </article>
{% endblock %}