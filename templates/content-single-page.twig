<article id="post-{{ post.id }}" class="single-page">
  {% block featureImage %}
    <div class="single-page__feature-image ">
      <div class="feature-image--single-page">
        {% if(post.thumbnail.src()) %}
          <img src="{{ post.thumbnail.src('feature1000') }}" class="feature-image--single-page__img" alt="{{ post.title }}"/>
        {% else %}
          <img src="/content/uploads/2016/02/stretton-climate-care-home-1000x250.jpg" class="feature-image--single-page__img" alt="{{ post.title }}"/>
        {% endif %}
      </div>
    </div>
  {% endblock %}
  {% block header %}
    <header class="entry-header single-page__header ">
      <h1 class="entry-title single-page__title ">
        <span>{{ post.title }}</span>
      </h1>
      <div class="entry-meta single-page__post-meta ">
        {% include 'post-meta--page.twig' %}
      </div>
    </header>
  {% endblock %}

  {% block content %}
    <div class="entry-content single-page__body ">
      {{ post.content }}
    </div>
  {% endblock %}

  {% block footer %}
    <footer class="single-page__footer ">
      {% if fn('have_rows','media_box') %}
        <div class="page__media-box">
          {% for box in  post.get_field('media_box') %}
            <div class="media-box is-{{ box.image_position }}">

              <div class="media-box__image">
                <img src="{{ box.image.sizes.thumbnail }}" alt="{{ box.image.alt }}"/>
              </div>

              <div class="media-box__text">
                <h2 class="media-box__title">{{ box.title }}</h2>
                <div>
                  {{ box.text }}
                </div>
              </div>

            </div>
          {% endfor %}
        </div>
      {% endif %}

    </footer>
  {% endblock %}

</article>