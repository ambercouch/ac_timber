{# This is an example of a twig template.
 it can be copied to your theme template folder if you are using the timber plugin #}
<div class="l-post-thumb-list--mxb-media">
  <ul class="l-post-thumb-list__list--mxb-media">
    {% for post in posts %}
      <li class="l-post-thumb-list__item--mxb-media">
        {% set headerTitle = (post.meta('publication_name')) ? post.meta('publication_name') : post.title %}
        {% set featureImage = post.meta('media_image') ? Image(post.meta('media_image')) : 'hide' %}
        {% include ["inc/post-thumb-media.twig"] with {
          'postType' : 'mxb-media',
          'featureImage' : featureImage
        } %}
      </li>
    {% endfor %}
  </ul>
</div>

