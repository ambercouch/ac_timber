{# This is an example of a twig template.
 it can be copied to your theme template folder if you are using the timber plugin #}
<div class="l-post-thumb-list--blog">
  <ul class="l-post-thumb-list__list--blog" data-isotope="blog">
    {% for post in posts %}
      <li id="itemPostId-{{ post.id }}" class="l-post-thumb-list__item--blog"  >
        <div class="l-post-thumb-list__post-thumb">
          {% include ["inc/post-thumb.twig"] with {'postType' : 'blog', 'headerTitle' : post.title} %}
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
