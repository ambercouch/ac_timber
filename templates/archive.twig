{% extends "base.twig" %}

  {% block hero %}
    <section class="site__hero">
      <div class="hero" style="background-image: url('{{  taxImage.url }}');">
        <img src="{{ taxImage.url }}" alt="{{ taxImage.alt }}" class="hero__image">
      </div>
    </section>
  {% endblock %}

{% block feature %}
{% endblock %}

{% block before_content %}
  <div class="archive-content">
    <h2  class="archive-content__title" >{{ title }}</h2>
    <div class="archive-content__content">
      {{ taxContent }}
    </div>
  </div>
{% endblock %}

{% block contentHeader  %}
  <h3>Our Services</h3>
{% endblock %}

{% block content %}
  {% for post in posts %}
    {% set postFormat = fn('get_post_format', post)? '-'~fn('get_post_format', post) : '' %}
    {% include 'content-' ~ taxSlug ~ '.twig' %}
  {% endfor %}
{% endblock %}

{% block belowContent %}
<section class="archive-footer">
  {{ taxFooter }}
  </section>
{% endblock %}

{% block subsidiary %}
{% endblock %}



