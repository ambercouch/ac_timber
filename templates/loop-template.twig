<div class="l-product-list woocommerce">
  <ul class="l-product-list__list">
    {% for post in posts %}
      {% set product = fn('wc_get_product' , post.ID ) %}
      {% set classAjaxAdd = product.supports('ajax_add_to_cart') ? 'add_to_cart_button ajax_add_to_cart' : '' %}
      <li class="l-product-list__item">
        <article {{ fn('post_class', ['entry', 'l-product-list__post-thumb'] ) }}>
        {% include ["inc/tease-product.twig"] %}
        </article>
      </li>
    {% endfor %}
  </ul>
</div>
