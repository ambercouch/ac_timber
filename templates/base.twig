<!doctype html>
<html {{ site.language_attributes }}>
<head>

  <meta charset="{{ site.charset }}">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="profile" href="http://gmpg.org/xfn/11">
  <link rel="pingback" href="{{ site.pingback_url }}">

  {% if acSettings.typeKitId %}
  <script src="https://use.typekit.net/{{ acSettings.typeKitId }}.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  {% endif %}

  {{ fn('wp_head') }}

</head>

<body class="{{ body_class }}">
{% include 'inc/defs.svg' ignore missing %}
<div id="page" class="site">

  {% include 'site-accessibility.twig' %}

  <header id="masthead" class="site__masthead" role="banner">

    {% include 'inc/masthead.twig' %}

  </header>

  <section id="primary" class="site__main">
    <div class="main">
      <main class="main__content">
        {% block content %}
          <p>Hello world! This AC Timber. I am the content Block in base.twig. Extend me!</p>
        {% endblock %}
        {% block belowContent %}
          {% if (fn('comments_open')) %}
            <section id="comments" class="comments">
              <h3 class="comments__title">Comments</h3>
              <div class="comments__response">
                {% for cmt in post.get_comments() %}
                  {% include "comment.twig" with {comment:cmt} %}
                {% endfor %}
              </div>
              <h3 class="comments__title">Leave a Reply</h3>
              <div class="comments__respond">
                {{ comment_form }}
              </div>
            </section>
          {% endif %}
        {% endblock %}
      </main>
      <div class="main__aside">
        <aside class="aside--main">
          {% block sidebar %}
          <h3>Our Products </h3>
          {% endblock %}
        </aside>
      </div>
    </div>
  </section>

</div>{# /#page #}
<link rel="stylesheet" href="{{ site.theme.link }}/style.css">
<script>

  var showButton, container;

  showButton = document.getElementById('menuButton');
  container = document.getElementById('primaryNavigation');

  console.log(showButton);
  showButton.onclick = function () {
    console.log(showButton.dataset.state);
    if ('off' === showButton.dataset.state) {
      showButton.dataset.state = 'on';
      container.dataset.state = 'on';
    } else {
      showButton.dataset.state = 'off';
      container.dataset.state = 'off';
    }
    console.log(showButton.dataset.state);
  }

</script>
</body>

</html>