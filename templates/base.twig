<!doctype html>
<html {{ site.language_attributes }}>
<head>

  <meta charset="{{ site.charset }}">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="profile" href="http://gmpg.org/xfn/11">
  <link rel="pingback" href="{{ site.pingback_url }}">

  {{ fn('wp_head') }}

</head>

<body class="{{ body_class }}">
{% include 'inc/defs.svg' ignore missing %}
<div id="page" class="site">

  {% include 'site-accessibility.twig' %}

  {% block aboveHeader %}
  {% endblock %}

  {% block header %}
  <header id="masthead" class="site__masthead" role="banner">
    {% include 'inc/masthead.twig' %}
  </header>
  {% endblock %}

  {% block hero %}
    <section class="site__hero">
      {% include 'inc/hero.twig' %}
    </section>
  {% endblock %}

  <section id="primary" class="site__main">
    <div class="main{{ main_mod }}">
      <main class="main__content">
        {% block before_content %}
        {% endblock %}
        <div class="content{{ content_mod }}">
          {% block contentHeader %}
          {% endblock %}
          {% block content %}
            <p>Hello world! This AC Timber. I am the content Block in base.twig. Extend me!</p>
          {% endblock %}
          {% block contentFooter %}
          {% endblock %}
        </div>
        {% block belowContent %}
          {% if (fn('comments_open')) %}
            <section id="comments" class="comments">
              <h3 class="comments__title">Comments</h3>
              <div class="comments__response">
                {%   if post.get_comments() %}
                {% for cmt in post.get_comments() %}
                  {% include "inc/comment.twig" with {comment:cmt} %}
                {% endfor %}
                {%  else %}
                <p>No one has left a comment yet - Why not be the first!</p>
                {% endif %}
              </div>
              <h3 class="comments__title">Leave a Reply</h3>
              <div class="comments__respond">
                {{ comment_form }}
              </div>
            </section>
          {% endif %}
        {% endblock %}
      </main>
      <!-- Sidebar should go here when needed -->
    </div>
  </section>

  {% block subsidiary %}
    <section id="subsidiary" class="site__subsidiary">
      {% include 'inc/subsidiary.twig' %}
    </section>
  {% endblock %}

</div>{# /#page #}

{% block footer %}
  <footer class="site__footer" role="contentinfo">
    {% include 'inc/footer.twig' %}
  </footer>
{% endblock %}

{% include 'inc/footer_scripts.twig' %}

<link rel="stylesheet" href="{{ site.theme.link }}/style.css">

<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
<script>window.jQuery || document.write('<script src="js/vendor/jquery-1.12.0.min.js"><\/script>')</script>

<script src="{{site.theme.link}}/dist/js/main.js?v=20160315"></script>

<script>

  var showButton, container;

  showButton = document.getElementById('menuButton');
  container = document.getElementById('primaryNavigation');

  console.log(showButton);
  showButton.onclick = function () {
    console.log(showButton.dataset.state);
    if ('off' === showButton.dataset.state) {
      showButton.dataset.state = 'on';
      container.dataset.state = 'on';
    } else {
      showButton.dataset.state = 'off';
      container.dataset.state = 'off';
    }
    console.log(showButton.dataset.state);
  }

</script>
</body>

</html>