<!doctype html>
<html {{ site.language_attributes }}>
<head>

  <meta charset="{{ site.charset }}">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="profile" href="http://gmpg.org/xfn/11">
  <link rel="pingback" href="{{ site.pingback_url }}">

  {% if acSettings.typeKitId %}
    <script src="https://use.typekit.net/{{ acSettings.typeKitId }}.js"></script>
    <script>try {
        Typekit.load({async: true});
      } catch (e) {
      }</script>
  {% endif %}

  {{ fn('wp_head') }}

</head>

<body class="{{ body_class }}" {{ fn('_act_body_data') }}>
{% include 'inc/defs.svg' ignore missing %}
<div id="page" class="site">

  {% include 'site-accessibility.twig' %}
  {% block masthead %}
    <header id="masthead" class="site__masthead" role="banner">
      {% include 'inc/masthead.twig' %}
    </header>
  {% endblock %}

  {% block hero %}
    <section class="site__hero">
      {% include 'hero.twig' %}
    </section>
  {% endblock %}

  <section id="primary" class="site__main{{ template_class }}">
    <div class="main{{ template_class }}">
      <main class="main__content{{ template_class }}">
        <div class="content{{ template_class }}">
          {% block content %}
            <p>Hello world! This AC Timber. I am the content Block in base.twig. Extend me!</p>
          {% endblock %}
        </div>
        {% block belowContent %}
          {% if (fn('comments_open')) %}
            <section id="comments" class="comments">
              <h3 class="comments__title">Comments</h3>
              <div class="comments__response">
                {% for cmt in post.get_comments() %}
                  {% include "comment.twig" with {comment:cmt} %}
                {% endfor %}
              </div>
              <h3 class="comments__title">Leave a Reply</h3>
              <div class="comments__respond">
                {{ comment_form }}
              </div>
            </section>
          {% endif %}
        {% endblock %}
      </main>
      {% block sidebar %}
        <div class="main__aside">
          <aside class="aside--main">
            {% include 'inc/sidebar.twig' %}
          </aside>
        </div>
      {% endblock %}
    </div>
  </section>

  {% block subsidiary %}
    <section id="subsidiary" class="site__subsidiary">
      {% include 'inc/subsidiary.twig' %}
    </section>
  {% endblock %}

</div>{# /#page #}

{% block footer %}
  <footer class="site__footer" role="contentinfo">
    {% include 'inc/footer.twig' %}
  </footer>
{% endblock %}

{% include 'inc/footer_scripts.twig' %}

<link rel="stylesheet" href="{{ site.theme.link }}/style.css">
<script>

  var showButton, container;

  showButton = document.getElementById('menuButton');
  container = document.getElementById('primaryNavigation');

  console.log(showButton);
  showButton.onclick = function () {
    console.log(showButton.dataset.state);
    if ('off' === showButton.dataset.state) {
      showButton.dataset.state = 'on';
      container.dataset.state = 'on';
    } else {
      showButton.dataset.state = 'off';
      container.dataset.state = 'off';
    }
    console.log(showButton.dataset.state);
  }

</script>
</body>

</html>