
{% if logoWidthDesktop != ''  or logoHeightDesktop != ''%}
  <style>

    .c-site-title--upload {
    {% if logoWidthMobile != '' %}
      width: {{ logoWidthMobile }}px !important;
      height: auto !important;
    {% endif %}
    {% if logoHeightMobile != '' %}
      height: {{ logoHeightMobile }}px !important;
    {% endif %}
    }

    @media (min-width: 500px) {
      .c-site-title--upload {
      {% if logoWidthDesktop != '' %}
        width: {{ logoWidthDesktop }}px !important;
        height: auto !important;
      {% endif %}
      {% if logoHeightDesktop != '' %}
        height: {{ logoHeightDesktop }}px !important;
      {% endif %}
      }
    }
  </style>
{% endif %}
