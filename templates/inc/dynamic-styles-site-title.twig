
{% if logoWidthDesktop != ''  or logoHeightDesktop != ''%}
  <style>

    .c-site-title--upload {
    {% if options.logo_width_mobile != '' %}
      width: {{ options.logo_width_mobile }}px !important;
      height: auto !important;
    {% endif %}
    {% if options.logo_height_mobile != '' %}
      height: {{ options.logo_height_mobile }}px !important;
    {% endif %}
    }

    @media (min-width: 440px) {
      .c-site-title--upload {
      {% if options.logo_width != '' %}
        width: {{ options.logo_width }}px !important;
        height: auto !important;
      {% endif %}
      {% if options.logo_height != '' %}
        height: {{ options.logo_height }}px !important;
      {% endif %}
      }
    }
  </style>
{% endif %}
