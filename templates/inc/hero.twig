{% if not fn('is_front_page') and pageSettingsShowSiteHero != true %}
  {%   set bannerImg = pageBannerImg %}
  {%   set bannerLogo = pageBannerLogo %}
  {%   set bannerContent = pageBannerContent %}
  {%   set menuName = pageBannerMenuName %}
  {% else %}
    {% set menuName = "hero" %}
{% endif %}

<div class="c-hero" >
  <div class="c-hero__container">

    {% if bannerImg.url != '' %}
    <div class="c-hero__image">
      <img src="{{  bannerImg.url }}" alt="{{  bannerImg.alt }}" class="c-image--background">
    </div>
    {% endif %}


    <div class="c-hero__body{{ templateClass }}">

      {% if bannerLogo.url != '' %}
      <div class="c-hero__logo">
          <img class="c-hero__img--logo" src=" {{  bannerLogo.url  }}" alt="{{ bannerLogo.alt }}">
      </div>
      {% endif %}

      {% if  bannerContent != '' %}
      <div class="c-hero__content">
        {{  bannerContent  }}
      </div>
      {% endif %}

      {% if not hideBannerMenu and menuName != '' %}
      <div class="c-hero__nav-menu--call-to-action">
        {% include 'inc/navigation.twig' %}
      </div>
      {% endif %}
    </div>
  </div>
</div>
