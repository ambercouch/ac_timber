<!-- ACF Hero CSS -->
<style>

  {% if (fn('is_front_page') and cssBannerImageHeight) or
   (not fn('is_front_page') and cssBannerImageHeight and pageSettingsShowSiteHero == true)%}
  /* cssBannerImageHeight */
  .hero{
    height: {{ cssBannerImageHeight }} !important;
    min-height: unset !important;
  }
  {% else %}
  /* NO cssBannerImageHeight */
  {% endif %}

  {% if not fn('is_front_page') and cssPageBannerImageHeight and pageSettingsShowSiteHero == false %}
  /* cssPageBannerImageHeight */
  .hero{
    height: {{ cssPageBannerImageHeight }} !important;
    min-height: unset !important;
  }
  {% else %}
  /* NO cssBannerImageHeight */
  {% endif %}

  {% if cssBannerImagePositionHorizontal %}
  /* cssBannerImagePositionHorizontal */
  .hero__background-img{
    object-position: {{ cssBannerImagePositionHorizontal }} ;
  }
  {% else %}
    /* NO cssBannerImagePositionHorizontal */
  {% endif %}

  {% if (fn('is_front_page') and cssBannerImageSaturation ) or (not fn('is_front_page') and pageSettingsShowSiteHero == true  and cssBannerImageSaturation) %}
  /*  cssBannerImageSaturation */
  .hero__background-img {
    -webkit-filter: saturate({{ cssBannerImageSaturation }}%) !important;
    filter: saturate({{ cssBannerImageSaturation }}%) !important;
  }
  {% else %}
  /* NO cssBannerImageSaturation */
  {% endif %}

  {% if  cssPageBannerImageSaturation %}
  /* cssPageBannerImageSaturation */
  .hero__background-img {
    -webkit-filter: saturate({{ cssPageBannerImageSaturation }}%) !important;
    filter: saturate({{ cssPageBannerImageSaturation }}%) !important;
  }
  {% else %}
  /* NO cssPageBannerImageSaturation */
  {% endif %}

  {% if (fn('is_front_page') and cssBannerColourCast) or
  (not fn('is_front_page') and cssBannerColourCast and pageSettingsShowSiteHero == true )%}
  .hero__background:before{
    display: block !important;
    background: {{cssBannerColourCastColour}} !important;
    opacity: {{cssBannerColourCastOpacity}} !important;
    mix-blend-mode: {{cssBannerColourCastMode}} !important;
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    transition: all .5s ease;
  }
  {% else %}
  /* NO cssBannerColourCast */
  {% endif %}

  {% if cssPageBannerColourCast and pageSettingsShowSiteHero == false %}
  /* cssPageBannerColourCast */
  .hero__background:before{
    display: block !important;
    background: {{cssPageBannerColourCastColour}} !important;
    opacity: {{cssPageBannerColourCastOpacity}} !important;
    mix-blend-mode: {{cssPageBannerColourCastMode}} !important;
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
    transition: all .5s ease;
  }
  {% else %}
  /* NO cssPageBannerColourCast */
  {% endif %}

  {% if cssPageBannerImageHeight %}
  /* cssPageBannerImageHeight */
  .hero--page{
    height: {{ cssPageBannerImageHeight }} !important;
    min-height: unset !important;
  }
  {% else %}
  /* NO cssPageBannerImageHeight */
  {% endif %}

  {% if cssPageBannerImagePositionHorizontal %}
  /* cssPageBannerImagePositionHorizontal */
  .hero__background-img{
    object-position: {{ cssPageBannerImagePositionHorizontal }} ;
  }
  {% else %}
  /* NO cssPageBannerImagePositionHorizontal */
  {% endif %}

  {% if post.meta('header_background_colour') %}
  .l-site__masthead, [class*=l-site__masthead--] {
    background: {{post.meta('header_background_colour')}} !important;
  }
  {% else %}
  /* NO header_background_colour */
  {% endif %}

  {% if post.meta('footer_background_colour') %}
  .l-site__footer, [class*=l-site__footer--] {
    background: {{post.meta('footer_background_colour')}} !important;
  }
  .l-footer__site-info:after{
    background: {{post.meta('footer_background_colour')}} !important;
  }
  .l-footer__shape-header >*{
    background: {{post.meta('footer_background_colour')}} !important;
  }
  {% else %}
  /* NO footer_background_colour */
  {% endif %}

</style>
