<div class="navigation--services">
  <ul class="navigation__list--services">
    {% for item in menuServices.get_items %}
      {% set objectId = item._menu_item_object_id  %}
      {% set thumbId = fn('get_post_thumbnail_id', objectId ) %}
      {% set thumbSrc = fn('wp_get_attachment_image_url', thumbId) %}
      {% set thumbSrcset = fn('wp_get_attachment_image_srcset', thumbId) %}
      {% set theExcerpt = fn('get_the_excerpt', objectId) %}
      <li class="navigation__item">
        <div class="navigation__image-menu-item" >
          <div class="image-menu-item">
            <img class="image-menu-item__img" alt="{{ item.title }}" src="{{ thumbSrc }}" srcset="{{ thumbSrcset }}" />
            <h3 class="image-menu-item__heading">{{ item.title }}</h3>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>