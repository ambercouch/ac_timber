{% if fn('is_front_page') %}
  <h1 class="c-site-title--svg">
    <a href="{{ site.url }} " rel="home">
      <svg class="icon c-site-title__icon" role="img" aria-label="{{ site.title }} {{ site.description }}" preserveAspectRatio="none" >
        <title>{{ site.title }}</title>
        <desc>{{ site.description }}</desc>
        <use xlink:href="#icon-logo" />
      </svg>
    </a>
  </h1>
{% else %}
  <span class="c-site-title--svg">
               <a href="{{ site.url }} " rel="home">
                 <svg class="icon c-site-title__icon" role="img" aria-label="{{ site.title }} {{ site.description }}" preserveAspectRatio="none" >
                   <title>{{ site.title }}</title>
                   <desc>{{ site.description }}</desc>
                   <use xlink:href="#icon-logo" />
                 </svg>
               </a>
            </span>
{% endif %}