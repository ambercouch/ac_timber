<div class="c-post-meta">

  <div class="c-post-meta__section--post-date">
    <div class="c-post-meta__post-date">
      <span class="c-post-meta__label" >Posted on</span> <span class="c-post-meta__date-published">{{ post.date }}</span> <span class="c-post-meta__label" >by</span> <span class="c-post-meta__author-name">{{ post.author }}</span>
    </div>
  </div>

  {% if postEditUrl != '' %}
    <div class="c-post-meta__section--post-admin">
      <div class="c-post-meta__post-admin">
          <span class="c-post-meta__post-links"><a  class="c-post-meta__post-edit-link" href="{{ postEditUrl }}" title="Edit {{ post.title }}">Edit</a></span>
      </div>
     </div>
  {% endif %}

</div>
