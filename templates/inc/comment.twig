<div class="c-comment {{comment.comment_type}}" id="blog-comment-{{comment.ID}}">
	<div class="c-comment__content">
	<div class="c-comment__avatar"><img src="{{ comment.avatar(200) }}" alt="Avatar for {{ comment.author.name  }}" class="comment__img"></div>
	<h5 class="c-comment__heading">{{comment.author.name}} says</h5>
	<div class="c-comment__body">{{comment.comment_content|wpautop}}</div>
</div>
</div>
