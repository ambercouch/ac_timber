{% block content %}
  <article id="post-{{ post.id }}" class="c-single-brand{{ templateClass }} {{ post.class }}">

  {% if post.thumbnail %}
    <div class="c-single-brand__feature-image{{ templateClass }}">
      <div class="feature-image">
        <img src="{{ post.thumbnail.src('feature16-4') }}" class="feature-image__img" alt="{{ post.title }}"/>
      </div>
    </div>
  {%  endif %}

    <header class="entry-header c-single-brand__header{{ templateClass }} ">

      <h2 class="entry-title c-single-brand__heading{{ templateClass }}">
        <span class="c-single-brand__title{{ templateClass }}">{{ post.title }}</span>
      </h2>



    </header>

      <div class="entry-content c-single-brand__body{{ templateClass }}">

        <div class="c-single-brand__content{{ templateClass }}">
          {{ post.content }}
        </div>

      </div>

    <footer class="c-single-brand__footer{{ templateClass }}">

    </footer>

  </article>
{% endblock %}