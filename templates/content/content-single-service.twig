{% set classPostSidebar = (post.meta('post_content_aside'))? 'has-sidebar': 'has-no-sidebar' %}
<article id="post-{{ post.id }}" class="l-single-page{{ templateClass }} {{ hidePageTitle ? 'has-title-hidden' : '' }} {{ classPostSidebar }}">

  {% if(post.thumbnail or acSettings.defaultImage) %}
    <div class="l-single-page__feature-image{{ templateClass }} ">
      <div class="c-feature-image--single-page">
        {% if(post.thumbnail.src()) %}
          <img src="{{ post.thumbnail.src('feature1000') }}" class="c-feature-image--single-page__img" alt="{{ post.title }}"/>
        {% else %}
          <img src="{{acSettings.defaultImage}}" class="c-feature-image--single-page__img" alt="{{ post.title }}"/>
        {% endif %}
      </div>
    </div>
  {% endif %}
  {% if not hidePageTitle %}
    <div class="l-single-page__header{{ templateClass }}">
      {% include "inc/header.twig"
        with {
        headerTitle : null,
        headingLevel : '1' ,
        headerModClass : templateClass,
        templateSubtitleAfter : 'hide'
      }%}
    </div>
  {% endif %}
  <div class="entry-content l-single-page__body{{ templateClass }} ">
    {{ post.content }}
  </div>

  {% if post.meta('post_content_aside') %}
  <div class="l-single-page__aside{{ templateClass }} ">
    <aside class="c-aside{{ templateClass }}">
      {{ post.meta('post_content_aside') }}
    </aside>
  </div>
  {% endif %}

  {% if post.meta('post_content_footer') %}
  <div class="l-single-page__footer{{ templateClass }} ">
    <footer class="c-footer{{ templateClass }}">
      {{ post.meta('post_content_footer') }}
    </footer>
  </div>
  {% endif %}

</article>
