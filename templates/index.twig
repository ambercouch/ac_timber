{% extends "base.twig" %}

{% block criticalcss %}
  <style>
    .hero__content {position: absolute;width:100%;bottom:60%;text-align:center;z-index:99;transform:translate(0,50%);}.site__masthead{background:#fff;z-index: 999;width: 100%;position:fixed;top: 0;transition:transform 0.3s ease;}.site__masthead {transform:translate(0, -100%);}
    {% include 'critical.css' %}
  </style>
{% endblock %}

  {% block hero %}
    {% if not fn('is_paged') and not fn('is_category')and not fn('is_tag')%}
      {{ parent() }}
    {% endif %}
  {% endblock %}


{% block content %}
  {% if fn('is_home')%}
    {% include 'main__header--blog.twig'  %}
  {% endif %}
  {% if fn('is_archive')%}
    {% include 'main__header.twig'  %}
  {% endif %}

  {{  fn('is_paged') or fn('is_category') or fn('is_tag') ? fn('the_posts_navigation') : '' }}

  {% for post in posts %}
    {% set postFormat = fn('get_post_format', post)? '-'~fn('get_post_format', post) : '' %}
    {% include 'content'~postFormat~'.twig' %}
  {% endfor %}

  {{ fn('the_posts_navigation') }}
{% endblock %}
