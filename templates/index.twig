{% extends "base.twig" %}

  {% block hero %}
    {% if not fn('is_paged') %}
      {{ parent() }}
    {% endif %}
  {% endblock %}


{% block content %}
  {{  fn('is_paged')? fn('the_posts_navigation') : '' }}

  {% for post in posts %}
    {% set postFormat = fn('get_post_format', post)? '-'~fn('get_post_format', post) : '' %}
    {% include 'content'~postFormat~'.twig' %}
  {% endfor %}
  {{ fn('the_posts_navigation') }}

{% endblock %}
