{# This is an example of a twig template.
 it can be copied to your theme template folder if you are using the timber plugin #}
<div class="l-post-thumb-list--service">
  <ul class="l-post-thumb-list__list--service">
    {% for post in posts %}
      {% set templateHeaderTitle = (post.meta('service_title') ? post.meta('service_title') : post.title) %}
      <li class="l-post-thumb-list__item--service">
        {% include ["inc/post-thumb.twig"] with {
            'postType' : 'service',
            'templateHeaderTitle' : templateHeaderTitle,
            'templateImageSize' : '(max-width:839px) 480px, 300px'
          }
        %}
      </li>
    {% endfor %}
  </ul>
</div>
