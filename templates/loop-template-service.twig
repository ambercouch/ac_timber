<div id="serviceLoop" class="l-post-thumb-list--service">
  <ul class="l-post-thumb-list__list--service">
    {% for post in posts %}
      <li class="l-post-thumb-list__item--service">
        {% set headerTitle = (post.meta('post_short_title') ? post.meta('post_short_title') : post.title) %}
        {% include ["inc/post-thumb.twig"] with {'tempModClass' : '--thumb-service', 'headerTitle' :  headerTitle } %}
      </li>
    {% endfor %}
  </ul>
</div>
