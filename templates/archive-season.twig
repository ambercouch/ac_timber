{% block before_content %}

  <div class="l-content__before-content--season-list u-mb-l">
    {% include "inc/header.twig"
      with {
      templateHeaderTitle : title,
      headingLevel : '1',
      headerModClass : '--season-list'
    }%}
  </div>

{% endblock %}

{% block content %}


    <div class="l-post-thumb-list">
      <div class="l-post-thumb-list__list--row">
        {% for post in posts %}
          {% if pmpro_has_membership_access(post.ID) %}
          <div class="l-post-thumb-list__item--column">
            <div class="l-post-thumb-list__post-thumb">
              {% set postFormat = fn('get_post_format', post)? '-'~fn('get_post_format', post) : '' %}
              {% include ['content/content-archive-season.twig', 'content/content.twig'] %}
            </div>
          </div>
            {% else %}
              <div class="l-post-thumb-list__item--column ">
                <div class="l-post-thumb-list__post-thumb">
                  {% set postFormat = fn('get_post_format', post)? '-'~fn('get_post_format', post) : '' %}
                  {% include ['content/content-archive-season-restricted.twig'] %}
                  <p>You do not have access to this season.
                    <a href="/membership-levels/" >Join now</a></p>
                </div>
              </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
{% endblock %}

{% block belowContent %}
  <div class="content__below">
    {% if posts.pagination.pages is not empty %}
      <div class="content__pagination">
        {% include 'inc/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
      </div>
    {% endif %}
  </div>
  <!-- removed comments in home.twig -->
{% endblock %}

